{% extends 'base.jinja2' %}

{% block subtitle %}Save Donations{% endblock subtitle %}

{% block content %}
    <p>Donation: <span_id="donation">{{ session.donation}}</span></p>
    <form method="POST">
        <label for="donor">Donor Name(i.e. John): </label><input type="text" id="donor">
        <label for="donation">Donation: </label><input type="number" id="donation">
        <input type="submit" value="Add Donation">
    </form>
    <form method="POST" action="{{  url_for('add')  }}">
        <label for="donor">Donor Name(i.e. John): </label><input type="text" id="donor">
        <label for="donation">Donation: </label><input type="number" id="donation">
        <input type="submit" value="Add Donation">
    </form>
{% endblock content %}
